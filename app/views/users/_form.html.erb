<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<% if @new_interest && @new_interest.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @new_interest.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user.interests.new, url: create_interest_path do |f| %> 
  <div class="field">
    <%= f.text_field :title, placeholder: "Тут можно..." %>
  </div>
  <div class="actions">
    <%= f.submit "Добавить интерес"%>
  </div>
<% end %>